<mvc:View
	controllerName="waseem.ui.controller.AddDetails"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<Page
		showNavButton="true"
		navButtonPress=".onGoBack"
	>
		<content>
			<Panel
				id="panelForGridList"
				height="100%"
			>
				<HBox
					wrap="Wrap"
					width="100%"
					height="100%"
					justifyContent="Center"
					alignItems="Center"
				>
					<GenericTile
						class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
						header="{i18n>ordersHeaderText}"
						subheader="{i18n>clickToAddText}"
						press=".onAddOrderPress"
					>
						<TileContent unit="{i18n>ordersUnitText}">
							<NumericContent
								value="{counts>/ordersCount}"
								withMargin="false"
								icon="sap-icon://sales-order"
							/>
						</TileContent>
					</GenericTile>
					<GenericTile
						class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
						header="{i18n>productsHeaderText}"
						subheader="{i18n>clickToAddText}"
						press=".onAddProductPress"
					>
						<TileContent unit="{i18n>productsUnitText}">
							<NumericContent
								value="{counts>/productsCount}"
								withMargin="false"
								icon="sap-icon://product"
							/>
						</TileContent>
					</GenericTile>
					<GenericTile
						class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
						header="{i18n>customersHeaderText}"
						subheader="{i18n>clickToAddText}"
						press=".onAddCustomerPress"
					>
						<TileContent unit="{i8n>customersUnitText}">
							<NumericContent
								value="{counts>/customersCount}"
								withMargin="false"
								icon="sap-icon://customer"
							/>
						</TileContent>
					</GenericTile>
				</HBox>
			</Panel>
		</content>
	</Page>
</mvc:View>